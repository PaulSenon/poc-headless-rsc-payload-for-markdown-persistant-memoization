    "@poc-rsc-payload/api": "workspace:*",
    "@poc-rsc-payload/components": "workspace:*",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@poc-rsc-payload/config": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "~19.1.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-rsc": "^0.5.1",
    "tsdown": "catalog:",
    "tsx": "^4.19.2",
    "typescript": "catalog:",
    "vite": "^7.2.2"
  }
}
